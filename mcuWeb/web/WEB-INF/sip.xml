<?xml version="1.0" encoding="UTF-8"?>
<sip-app>
    <app-name>mcuWeb</app-name>
    <session-config>
        <session-timeout>0</session-timeout>
    </session-config>
    <listener>
        <listener-class>org.murillo.mcuWeb.MCUSipServlet</listener-class>
   </listener>
   <servlet>
      <servlet-name>MCUSipServlet</servlet-name>
      <servlet-class>org.murillo.mcuWeb.MCUSipServlet</servlet-class>
      <load-on-startup>1</load-on-startup>
   </servlet>
   <servlet-selection>
       <servlet-mapping>
	 <servlet-name>MCUSipServlet</servlet-name>
	 <pattern>
	     <or>
		 <equal>
		     <var>request.method</var>
		     <value>BYE</value>
		 </equal>
		 <equal>
		     <var>request.method</var>
		     <value>INVITE</value>
		 </equal>
		 <equal>
		     <var>request.method</var>
		     <value>ACK</value>
		 </equal>
		 <equal>
		     <var>request.method</var>
		     <value>OPTIONS</value>
		 </equal>
		 <equal>
		     <var>request.method</var>
		     <value>INFO</value>
		 </equal>
		 <equal>
		     <var>request.method</var>
		     <value>REGISTER</value>
		 </equal>
	     </or>
	 </pattern>
       </servlet-mapping>
   </servlet-selection>
</sip-app>
